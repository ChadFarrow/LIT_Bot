# LIT_Bot Configuration
# Copy this file to .env and fill in your values

# Required: Your LIT_Bot Nostr private key (generate with: noscl key-gen)
LIT_BOT_NSEC=your_nostr_private_key_here

# Optional: Port to run on (default: 3334)
PORT=3334

# Optional: Test mode (set to false for live posting)
TEST_MODE=false

# Optional: IRC disconnect delay in milliseconds (default: 2000 = 2 seconds)
IRC_DISCONNECT_DELAY=5000